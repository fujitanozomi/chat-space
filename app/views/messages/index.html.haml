%body
.notice チャットグループが作成されました
.wrapper
  .left
    .layout-left-header
      .user-header
        %h3.user-header__name
          name
        %a.user-header__new-group{href: "/groups/new"}
          %i.fa.fa-pencil-square-o.icon
        %a.user-header__edit-user{href: "/groups/#[:id]/edit"}
          %i.fa.fa-cog.icon
    .layout-left-body
      .groups
        .one-group
          %h4.one-group__name
            チャットグループ１
          %h5.one-group__message
            こんにちは！

  .right
    .layout-right-header
      .group-header
        .group-header__top-contents
          %h6.group-name
            group name
          %a.edit-button{href: "/groups/#[:id]/edit"}Edit
        .group-header__bottom-content-members
          MEMBER

    .layout-right-body
      .messages-list
        .one-message
          %h8.one-message__writer-name
            member name
          %h7.one-message__written-time
            2016/12/12 12:12
          %h9.one-message__written-message
            こんにちは！
    .layout-right-footer
      .form
        .form__image{href: "/"}
          %i.fa.fa-image.icon
        %input.form__type-message{:name => "message[body]", :placeholder => "type a message", :type => "text"}/
        %input.form__submit-button{"data-disable-with" => "Send", :name => "commit", :type => "submit", :value => "Send"}/


